<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivMovie"
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:background="@color/transparent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvMovieTitle"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/tvMovieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Movie NAME"
        android:textSize="23dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/ivMovie"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivMovie"
        android:layout_margin="11dp"
        />

    <TextView
        android:id="@+id/tvMovieYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:text="2019"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/tvMovieCountry"
        app:layout_constraintLeft_toRightOf="@id/tvMovieGenre"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMovieTitle" />

    <TextView
        android:id="@+id/tvMovieCountry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="11dp"
        android:text="US"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/tvMovieIMDBID"
        app:layout_constraintLeft_toRightOf="@id/tvMovieType"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMovieYear" />

    <TextView
        android:id="@+id/tvMovieGenre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Action"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvMovieTitle"
        app:layout_constraintRight_toLeftOf="@id/tvMovieYear"
        app:layout_constraintLeft_toRightOf="@id/ivMovie"
        app:layout_constraintBottom_toTopOf="@id/tvMovieType"
        android:layout_margin="11dp"
        />
    <TextView
        android:id="@+id/tvMovieType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Movie"
        android:textSize="18dp"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvMovieGenre"
        app:layout_constraintRight_toLeftOf="@id/tvMovieCountry"
        app:layout_constraintLeft_toRightOf="@id/ivMovie"
        app:layout_constraintBottom_toTopOf="@id/tvMovieIMDBID"
        android:layout_margin="11dp"
        />

    <TextView
        android:id="@+id/tvMovieIMDBID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="tt414334567"
        android:textSize="19dp"
        android:textColor="@color/white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ivMovie"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="11dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>